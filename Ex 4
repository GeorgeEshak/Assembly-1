.586
.MODEL FLAT
INCLUDE io.h 
.STACK 4096
.DATA
	resultlbl1 BYTE "The total is" ,0
	resultlbl2 BYTE "The average is" ,0	
	x DWORD ?
	y DWORD ?
	z DWORD ?
	w DWORD ?
	t DWORD ?

	
	four BYTE 	"4" ,0
	
	result BYTE 11 DUP (5) ,0
	prompt1 BYTE 	"Enter X" ,0
	prompt2 BYTE 	"Enter Y",0
	prompt3 BYTE 	"Enter Z",0
	prompt4 BYTE 	"Enter w",0

	string BYTE 40 DUP (?)

.CODE 
	MainProc PROC

			atod four
			mov t,eax

			input prompt1,string,40
			atod string
			mov x,eax

			input prompt2,string,40
			atod string
			mov y,eax

			add eax,x
			mov x,eax

			input prompt3,string,40
			atod string
			mov z,eax
		
			add eax,x
			mov z,eax

			input prompt4,string,40
			atod string
			mov w,eax

			add eax,Z
			mov w,eax
		
			dtoa result,eax
			output resultlbl1,result

			mov eax ,0
			ret 
	MainProc ENDP
END
